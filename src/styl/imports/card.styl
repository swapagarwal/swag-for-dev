.item
	width 100%
	max-width 350px
	display none
	position relative

	> div
		opacity 1
		transition opacity .6s ease-in-out

	div.information
		padding 3rem
		height auto
		margin-bottom 4rem
		background #FFF
		border-radius 0 0 10px 10px
		border 1px solid grey-color
		border-top none

		.title
			justify-content space-between
			margin-bottom 10px

			h1
				font-size 2.4rem

				a
					color title-color
					&:hover
						color title-hover-color

			.difficulty
				height 3rem
				width 3rem
				border-radius 50%
				border 2px solid black

				&.easy
					background #73f440

				&.medium
					background #FFFF00

				&.hard
					background #FF0009

		p
			font-size 1.6rem
			line-height 1.4
			color #222
			justify-content flex-start
			flex-wrap wrap

			&.swag
				margin 5px -3px 10px -3px

				span.tag
					background #737373
					color #fff
					border-radius 3px
					margin 0 3px 6px
					padding 2px 5px
					font-size 1.6rem
					&.hacktoberfest
						background hacktoberfest-bg
						color hacktoberfest-color
					&.clothing
						background clothing-bg
						color clothing-color
					&.stickers
						background stickers-bg
						color stickers-color
					&.badges
						background badges-bg
						color badges-color
					&.accessories
						background accessories-bg
						color accessories-color
					&.device
						background device-bg
						color device-color

			&.description
				margin 10px 0
				a
					color tertiary-color
					&:hover
						color tertiary-hover-color

		a.btn
			color tertiary-color
			font-size 1.8rem
			padding .4rem 2rem
			margin-top 1.2rem
			border-radius .6rem
			border 2px solid tertiary-color
			text-decoration none
			display inline-block

			&:hover
				background tertiary-color
				color white-color
				border 2px solid tertiary-color

	img
		height 100%
		width auto
		transition all 300ms linear

	.img-container
		height 300px
		width 100%
		position relative
		z-index 99
		overflow hidden
		border-radius 10px 10px 0 0
		border 1px solid grey-color
		background white-color

	&:hover
		img
			transform rotate(3deg) scale(1.05)
		a
			border none

		label span
			border-color transparent

	&.checked-off
		& > *:not(.task-complete)
			opacity 0.4

		&.fade-out
			> *:not(.task-complete)
				opacity 0


	.task-complete
		display flex
		flex-direction row-reverse
		position absolute
		cursor pointer
		width max-content
		margin 1em
		top 0
		right 0
		z-index 999

		i
			min-width 1.6em
			border 2px solid primary-color
			background white-color
			align-items center
			height 1.6em
			border-radius 2px
			transition all .25s cubic-bezier(.4,.0,.23,1)
			box-sizing border-box
			opacity .8

			&:hover
				opacity 1

		input
			position absolute
			height 1.6em
			width 1.6em
			opacity 0
			right 0
			cursor pointer

			&:checked + i
				border .8em solid secondary-color
				animation bounce 200ms cubic-bezier(.4,.0,.23,1)
				opacity 1
				background-color secondary-color

				&::before
					content ''
					position absolute
					top .6em
					right .8em
					border-right 3px solid transparent
					border-bottom 3px solid transparent
					transform rotate(45deg)
					transform-origin 0% 100%
					animation checkbox .125s .25s cubic-bezier(.4,.0,.23,1) forwards

@keyframes bounce
	0%
		transform scale(1)
	33%
		transform scale(.65)
	100%
		transform scale(1)

@keyframes checkbox
	0%
		width 0
		height 0
		border-color #212121
		transform translate3d(0,0,0) rotate(45deg)
	33%
		width .4em
		height 0
		transform translate3d(0,0,0) rotate(45deg)
	100%
		width .4em
		height .9em
		border-color #212121
		transform translate3d(0,-.8em,0) rotate(45deg)
