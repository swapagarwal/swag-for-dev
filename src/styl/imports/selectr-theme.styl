.selectr-container
	user-select none

.selectr-placeholder
	font-family $default-font-family
	font-size 0.9rem
	color #000

.selectr-options
	overflow-y auto

.selectr-options-container
	border-radius 0px

.selectr-option
	padding 3px 5px 3px 5px
	font-size 0.9em
	cursor default

.selectr-selected
	border none
	border-bottom 2px solid #bbb
	border-radius 0px
	padding-left 5px
	padding-bottom 5px
	padding-right 20px

	&:before
		top 60%
		right 5px

.selectr-tag
	background #737373
	color #fff
	border-radius 3px
	margin 0 3px
	padding 2px 20px 2px 5px
	font-size 1rem
