@require "imports/base"

.container
	min-height 100vh
	width 100vw
	overflow-x hidden

.hidden
	display none

section.main
	width 90%
	flex-direction column
	margin 0 auto

	.controls
		flex-wrap wrap

		@media screen and (max-width: 450px)
			justify-content left

	.heading
		flex-direction column
		min-height 40vh
		text-align center
		margin 6vh 2vh

		h1
			font-size 3rem
			color #111
			width 90%

		p
			font-size 1.2rem
			color #555
			margin-top 20px
			width 90%

	.buttons
		justify-content flex-start
		padding-bottom 15px
		max-width 1150px
		width 100%
		flex-direction column
		align-items flex-start

		.top
			flex-wrap wrap
			width 100%
			justify-content flex-start

		@media screen and (max-width: 450px)
			.item, .select-wrapper, select
				width 100%

		.item
			padding 5px

		.select-wrapper
			position relative
			margin 0 5px

			&:before
				position absolute
				top 50%
				right 10px
				width 0
				height 0
				content ''
				transform rotate(0) translate3d(0, -50%, 0)
				border-width 4px 4px 0
				border-style solid
				border-color #6c7a86 transparent transparent
				pointer-events none

		input
			margin-right 6px

		select
			background #fff
			border none
			border-bottom 2px solid #bbb
			border-radius 0px
			padding 5px 20px 5px 5px
			-webkit-appearance none
			-moz-appearance none
			font-family $default-font-family
			font-size 0.9rem
			cursor pointer

		@import "imports/selectr-theme"

	.content
		max-width 1100px
		flex-wrap wrap
		align-items flex-start
		justify-content space-around
		margin 0 -10px
		margin-top 8px
		width 100%

		@import "imports/card"

footer
	margin 0 auto 70px auto
	flex-wrap wrap
	padding-bottom 15px
	max-width 1150px
	width 100%
	flex-direction row

	.item
		width 100%

@import "imports/a11y"

#content .item.visible
	display initial
